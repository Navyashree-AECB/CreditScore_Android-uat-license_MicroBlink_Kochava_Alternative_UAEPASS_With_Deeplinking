<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <style name="ToolbarTitleFontBlackBold">
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_24</item>
    </style>

    <style name="ButtonTextBlue" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/border_color</item>
    </style>

    <style name="MediumFont">
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="SmallFont">
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SmallFontForReportTitle">
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="LargeFont">
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeFontForPayment">
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textSize">@dimen/_22ssp</item>
        <item name="android:textColor">@color/border_color</item>
    </style>

    <style name="ExtraLargeFont">
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textSize">@dimen/_30ssp</item>
    </style>

    <style name="DoubleExtraLargeFont">
        <item name="android:textSize">@dimen/_45ssp</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="fontPath">Roboto-Light.ttf</item>
        <item name="android:textColor">@color/dashboard_text_color</item>
    </style>

    <style name="LargeFont.TextAlineStart">
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textDirection">ltr</item>
    </style>

    <style name="ExtraMediumFont">
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textSize">@dimen/_17ssp</item>
    </style>

    <style name="ExtraMediumFontForBadgeTitle">
        <item name="fontPath">Roboto-Regular.ttf</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="SmallFont.TextAlineStart">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">ltr</item>
    </style>

    <style name="VerySmallFont">
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="VerySmallFontDefault">
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:gravity">center|end</item>
    </style>

    <style name="ExtremeSmallFont">
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="VerySmallFont_Payment_Confirmation">
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="PriceSmallFont">
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="LargeTextView" parent="LargeFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ExtraMediumTextView" parent="ExtraMediumFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MediumFontTextView" parent="MediumFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SmallFontTextView" parent="SmallFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PriceFontTextView" parent="PriceSmallFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VerySmallFontTextView" parent="VerySmallFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextLabel">
        <!-- Hint color and label color in FALSE state -->
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textColorHint">@color/hint_login_register</item>
    </style>

    <style name="TextLabel.TextAligment">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:gravity">left</item>
        <item name="android:textDirection">ltr</item>
    </style>
    <!-- styles.xml -->
    <!--
        <style name="nearby">
            <item name="fontPath">sf_pro_text_regular.ttf</item>
            <item name="android:textSize">16sp</item>
            <item name="android:letterSpacing" tools:ignore="NewApi">-0.02</item>
            <item name="android:textColor">@color/black</item>
        </style>
    -->
    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="MyAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">true</item>

    </style>

    <style name="CustomAlertDialogStyleParentTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

    <style name="DialogActivityTheme" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <!-- styles.xml -->
    <style name="ui_text_hea">
        <item name="fontPath">sf_pro_text_regular.ttf</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppThemeO" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert" />

    <style name="SeekArc">
        <item name="seek_arc_arcColor">@color/progress_gray_dark</item>
    </style>

    <style name="SeekArcLight">
        <item name="seek_arc_arcColor">@color/progress_gray</item>
    </style>

</resources>