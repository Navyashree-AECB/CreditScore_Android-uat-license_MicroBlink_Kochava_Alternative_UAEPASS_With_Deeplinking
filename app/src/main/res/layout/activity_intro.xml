<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/parentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/intro_bg_color"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llTopItems"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAecbLogo"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/aecb_white_icon" />

            <TextView
                android:id="@+id/tvMainTitle"
                style="@style/ExtraMediumFont"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_52sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                tools:text="View Your Dashboard \n and Purchase History" />

            <TextView
                android:id="@+id/tvMainDesc"
                style="@style/SmallFont"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center|top"
                android:textColor="@color/white"
                tools:text="View your latest Credit \n Score,previously purchased \n reports" />

            <LinearLayout
                android:id="@+id/layoutDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/tvSkip"
                style="@style/SmallFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:text="@string/skip"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/mobile_bg_intro">

            <com.aecb.presentation.autoscrollviewpager.AutoScrollViewPager
                android:id="@+id/vpIntroItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_56sdp"
                android:layout_marginEnd="@dimen/_15sdp" />

        </RelativeLayout>

    </LinearLayout>

    <data></data>
</layout>
