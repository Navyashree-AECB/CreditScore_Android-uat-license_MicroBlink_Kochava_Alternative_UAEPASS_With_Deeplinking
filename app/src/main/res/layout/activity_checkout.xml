<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/parentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_bg_color"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/loutTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.aecb.presentation.customviews.ToolbarView
                    android:id="@+id/toolBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_topcurv_white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvText"
                        style="@style/ToolbarTitleFontBlackBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:text="@string/checkout" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvCreditScoreOnly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:visibility="visible"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@drawable/bg_credit_report"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvProductTitle"
                                    style="@style/SmallFont"
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:paddingStart="@dimen/_15sdp"
                                    android:paddingEnd="@dimen/_7sdp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    tools:text="@string/credit_score_only" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivCreditScoreOnlyInfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:adjustViewBounds="true"
                                    android:visibility="gone"
                                    app:srcCompat="@drawable/ic_white_info" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvProductDesc"
                                    style="@style/VerySmallFont"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:paddingStart="@dimen/_15sdp"
                                    android:paddingEnd="@dimen/_15sdp"
                                    android:textColor="@color/black"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingEnd="@dimen/_15sdp"
                                    android:paddingBottom="@dimen/_10sdp">

                                    <TextView
                                        style="@style/VerySmallFont"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:paddingStart="@dimen/_15sdp"
                                        android:text="@string/aed"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:id="@+id/tvProductPrice"
                                        style="@style/SmallFont"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:paddingStart="@dimen/_3sdp"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        tools:text="@string/credit_report_price" />

                                    <TextView
                                        style="@style/VerySmallFont"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:paddingStart="@dimen/_5sdp"
                                        android:text="@string/incl_vat"
                                        android:textColor="@color/black" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_0_5"
                                android:background="@color/gray_light"
                                android:paddingTop="@dimen/_5sdp" />

                            <LinearLayout
                                android:id="@+id/llProductAdded"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivButtonAdd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:adjustViewBounds="true"
                                    android:visibility="gone"
                                    app:srcCompat="@drawable/ic_circle_add" />

                                <TextView
                                    android:id="@+id/tvProductNameWithPrice"
                                    style="@style/VerySmallFont"
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_weight="1"
                                    android:text="@string/credit_report_price"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvRemove"
                                    style="@style/VerySmallFont"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:text="@string/txt_remove"
                                    android:textColor="@color/border_color" />

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/llAddProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvOtherProductPrice"
                                style="@style/VerySmallFont"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add_credit_report_for_only"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvProductRegularPrice"
                                style="@style/VerySmallFont"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="@string/regular_price"
                                android:textColor="@color/black"
                                android:visibility="gone" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnAddProduct"
                            style="@style/SmallFont"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_round_corner_blue"
                            android:text="@string/add"
                            android:textAllCaps="false"
                            android:textColor="@color/border_color" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/view_line" />

                    <LinearLayout
                        android:id="@+id/llAddRecipients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/VerySmallFont"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/share_with_other_receipients"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btnAddRecipient"
                            style="@style/SmallFont"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_round_corner_blue"
                            android:text="@string/add"
                            android:textAllCaps="false"
                            android:textColor="@color/border_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llListRecipients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/bg_gray_border"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvRecipientsNames"
                            style="@style/VerySmallFont"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            tools:text="@string/shared_with_recipients" />

                        <TextView
                            android:id="@+id/tvViewAll"
                            style="@style/VerySmallFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:text="@string/view_all"
                            android:textColor="@color/border_color"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        style="@style/VerySmallFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="@string/select_payment_method"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/llPaymentMethods"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardView"
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/selected_card_backgraound"
                                    app:cardCornerRadius="@dimen/_5sdp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/selected_card_backgraound">

                                        <LinearLayout
                                            android:id="@+id/llCreditCard"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_marginBottom="@dimen/_5sdp"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <androidx.appcompat.widget.AppCompatImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginTop="@dimen/_10sdp"
                                                android:adjustViewBounds="true"
                                                app:srcCompat="@drawable/ic_credit_card" />

                                            <TextView
                                                style="@style/VerySmallFont"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginTop="@dimen/_7sdp"
                                                android:text="@string/credit_card"
                                                android:textColor="@color/black" />
                                        </LinearLayout>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        style="@style/SmallFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/order_summary"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/app_bg_color"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvSummaryTitle"
                                style="@style/VerySmallFont"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textStyle="normal"
                                tools:text="@string/credit_score" />

                            <TextView
                                android:id="@+id/tvSummaryPrice"
                                style="@style/VerySmallFont"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                tools:text="" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvSummaryVatTitle"
                                style="@style/VerySmallFont"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_weight="1"
                                android:text="@string/txt_vat"
                                android:textColor="@color/black"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tvSummaryVatPrice"
                                style="@style/VerySmallFont"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                tools:text="" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/VerySmallFont"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_weight="1"
                                android:text="@string/txt_total"
                                android:textColor="@color/black"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tvSummaryTotal"
                                style="@style/VerySmallFont"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end|center"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                tools:text="" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llPaymentMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/SmallFont"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_weight="1"
                                android:text="@string/pay_with"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvChangeCard"
                                style="@style/VerySmallFont"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_25sdp"
                                android:gravity="end"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/change"
                                android:textColor="@color/border_color"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvCardList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@drawable/selected_card_backgraound"
                            app:cardCornerRadius="@dimen/dp_5"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layoutDirection="ltr"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivCardLogo"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_14sdp"
                                    android:src="@drawable/ic_master_card" />

                                <LinearLayout
                                    android:layout_width="@dimen/dp_0"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layout_weight="2"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tvCardType"
                                            style="@style/VerySmallFont"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingStart="@dimen/_15sdp"
                                            android:visibility="visible"
                                            tools:text="MasterCard" />

                                        <TextView
                                            android:id="@+id/tvCardNumber"
                                            style="@style/SmallFont"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_19sdp"
                                            android:layout_marginEnd="@dimen/_20sdp"
                                            android:textColor="@color/black"
                                            android:textDirection="ltr"
                                            android:textStyle="bold"
                                            tools:text="....4567">

                                        </TextView>
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tvCardIsDefault"
                                        style="@style/VerySmallFont"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:paddingStart="@dimen/_19sdp"
                                        android:paddingEnd="@dimen/_15sdp"
                                        android:text="@string/txt_default"
                                        android:textColor="@color/default_txt_color"
                                        android:visibility="visible" />

                                </LinearLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvEDirham"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/selected_card_backgraound"
                            android:visibility="gone"
                            app:cardCornerRadius="@dimen/dp_5"
                            app:cardElevation="@dimen/_2sdp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layoutDirection="ltr"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layoutDirection="ltr"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:paddingTop="@dimen/_3sdp"
                                        android:paddingBottom="@dimen/_3sdp"
                                        app:srcCompat="@drawable/edirham_logo" />

                                    <TextView
                                        android:id="@+id/tvDefaultEDirham"
                                        style="@style/VerySmallFontDefault"
                                        android:layout_width="0dp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_marginStart="@dimen/_14sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:paddingEnd="@dimen/_10sdp"
                                        android:text="@string/txt_default"
                                        android:textColor="@color/border_color"
                                        android:visibility="invisible" />

                                    <ImageView
                                        android:id="@+id/ivThreeDotsEDirham"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="@dimen/_2sdp"
                                        android:padding="@dimen/_5sdp"
                                        android:visibility="gone"
                                        app:srcCompat="@drawable/ic_three_dots" />

                                </LinearLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <Button
                        android:id="@+id/btnContinue"
                        style="@style/SmallFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:background="@drawable/bg_blue_button"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        tools:text="@string/txt_confirm_and_continue" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.github.mmin18.widget.RealtimeBlurView
            android:id="@+id/blurView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:realtimeBlurRadius="50dp"
            app:realtimeOverlayColor="#99000000" />

        <RelativeLayout
            android:id="@+id/rlLoadingView"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:visibility="visible">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/white"
                    android:indeterminateTintMode="src_atop" />

                <TextView
                    android:id="@+id/loadingTextView"
                    style="@style/MediumFont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16ssp"
                    android:visibility="visible"
                    android:text="@string/payment_progress" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</layout>