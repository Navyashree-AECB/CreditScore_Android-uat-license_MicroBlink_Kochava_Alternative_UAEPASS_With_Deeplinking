<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCardList"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/_3sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layoutDirection="ltr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCardLogo"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_20sdp"/>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCardName"
                        style="@style/ui_text_hea"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_15sdp"
                        tools:text="MasterCard" />

                    <TextView
                        android:id="@+id/tvCardNumber"
                        style="@style/SmallFont"
                        android:textDirection="ltr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_19sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="....4567">

                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCardIsDefault"
                    style="@style/VerySmallFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:paddingStart="@dimen/_19sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:text="@string/txt_default"
                    android:textColor="@color/default_txt_color"
                    android:visibility="gone" />

            </LinearLayout>


            <ImageView
                android:id="@+id/ivThreeDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_2sdp"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_three_dots" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</layout>