<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/language_color"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_65sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            app:srcCompat="@drawable/aecb_white_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            app:srcCompat="@drawable/maintenance_frame_option2" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/ToolbarTitleFontBlackBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/maintenance_text"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp" />

        <TextView
            style="@style/MediumFont"
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_60sdp"
            android:gravity="center"
            android:text="@string/maintenance_text1"
            android:textColor="@color/white"  />

    </LinearLayout>

</layout>
