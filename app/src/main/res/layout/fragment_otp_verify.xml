<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_topcurv_white">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_16sdp">

                    <TextView
                        style="@style/ToolbarTitleFontBlackBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="center"
                        android:text="@string/otp" />

                    <TextView
                        android:id="@+id/txtDescOTP"
                        style="@style/VerySmallFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:text="@string/txt_desc_otp_sent"
                        android:textColor="@color/select_language" />

                    <LinearLayout
                        android:layoutDirection="ltr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:gravity="center_horizontal">

                        <EditText
                            android:id="@+id/edtOtpOne"
                            style="@style/ExtraLargeFont"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_margin="@dimen/_6sdp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_pin"
                            android:gravity="center"
                            android:hint="@string/hint_x"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black" />

                        <EditText
                            android:id="@+id/edtOtpTwo"
                            style="@style/ExtraLargeFont"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_margin="@dimen/_6sdp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_pin"
                            android:gravity="center"
                            android:hint="@string/hint_x"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black" />

                        <EditText
                            android:id="@+id/edtOtpThree"
                            style="@style/ExtraLargeFont"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_margin="@dimen/_6sdp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_pin"
                            android:gravity="center"
                            android:hint="@string/hint_x"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black" />

                        <EditText
                            android:id="@+id/edtOtpFour"
                            style="@style/ExtraLargeFont"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_margin="@dimen/_6sdp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_pin"
                            android:gravity="center"
                            android:hint="@string/hint_x"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black" />

                        <EditText
                            android:id="@+id/edtOtpFive"
                            style="@style/ExtraLargeFont"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_margin="@dimen/_6sdp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_pin"
                            android:gravity="center"
                            android:hint="@string/hint_x"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black" />

                        <EditText
                            android:id="@+id/edtOtpSix"
                            style="@style/ExtraLargeFont"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_margin="@dimen/_6sdp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_pin"
                            android:gravity="center"
                            android:hint="@string/hint_x"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtError"
                        style="@style/SmallFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:drawableStart="@mipmap/ic_error_red"
                        android:drawablePadding="@dimen/_4sdp"
                        android:textColor="@color/color_red"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnSubmit"
                        style="@style/SmallFont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/disable_button"
                        android:text="@string/txt_continue"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvResendOtp"
                            style="@style/SmallFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:text="@string/resend_otp"
                            android:textColor="@color/border_color"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTimeRemaining"
                            style="@style/VerySmallFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@string/time_remaining"
                            android:textColor="@color/select_language" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
    </RelativeLayout>
</layout>